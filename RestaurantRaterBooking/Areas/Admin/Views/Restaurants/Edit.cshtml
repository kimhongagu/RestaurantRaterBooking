<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}

	<script>
		$(document).ready(function () {
			CKEDITOR.replace('txtDesciption', {
				customConfig: '~/ckeditor/config.js',
				extraAllowedContent: 'span',
			});
		});
	</script>
