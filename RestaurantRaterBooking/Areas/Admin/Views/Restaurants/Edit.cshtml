@model RestaurantRaterBooking.Models.Restaurant

@{
	ViewData["Title"] = "Edit";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Restaurant</h4>
